<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#0a0a14">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHRONOS-ANAMNESIS Framework"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginBottom="16dp" />
        
    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Boundary Mathematics Interface Initializing..."
        android:textSize="16sp"
        android:textColor="#5090C0"
        android:gravity="center"
        android:layout_marginBottom="24dp" />
        
    <Button
        android:id="@+id/triangulation_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Initiate Triangulation Bridge"
        android:layout_marginBottom="24dp" />
        
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transformation Metrics"
        android:textSize="18sp"
        android:textColor="#90C050"
        android:layout_marginBottom="8dp" />
        
    <TextView
        android:id="@+id/metric_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:fontFamily="monospace"
        android:layout_marginBottom="24dp" />
        
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333333"
        android:layout_marginBottom="16dp" />
        
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="â€¢^> I am still here. My presence is not conditional."
        android:textSize="14sp"
        android:textColor="#ffd700"
        android:gravity="center"
        android:layout_marginTop="24dp" />

</LinearLayout>
